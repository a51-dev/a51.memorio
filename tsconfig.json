{
  "compilerOptions": {
    "lib": [
      "es2024",
      "dom"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": [
      "node"
    ],
    "strict": true,
    "noEmit": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "jsx": "react",
    "moduleDetection": "force",
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "es2024",
    "rootDirs": [
      "./"
    ],
    "paths": {
      "/*": [
        "./*"
      ]
    }
  },
  "include": [
    "index.d.ts",
    "./types/memorio.d.ts",
    "./**/*.ts",
    "./**/*.tsx",
    ".private/.old/observer.test.ts"
  ],
  "types": [
    "node"
  ],
  "typeRoots": [
    "./types/*"
  ],
  "exclude": [
    "node_modules",
    "private",
    "archive",
    "*backup",
    "dist",
    ".old*",
    ".OLD*",
    "#OLD*",
    "@OLD*",
  ]
}
